{
  "extends": "@salesforce/dev-config/tsconfig-strict",
  "compilerOptions": {
    "target": "ES2017",
    "lib": "es2017",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "include": "./force-app/**/*.ts",
    "module": "commonjs",
    "esModuleInterop": true
  }
}